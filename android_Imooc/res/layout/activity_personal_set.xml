<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="20sp"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    tools:context=".PersonalSets" >

    <RelativeLayout
        android:id="@+id/Re_avator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Tv_avator"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="头像"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/Im_avator"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#BEBEBE" >
    </View>

    <RelativeLayout
        android:id="@+id/Re_occupation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Tv_occupation"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="职业"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Tv_occupation1"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:textColor="#BEBEBE" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Re_autograph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Tv_autograph"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="签名"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Tv_autograph1"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:textColor="#BEBEBE" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#BEBEBE" >
    </View>

    <RelativeLayout
        android:id="@+id/Re_nickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="昵称"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Tv_nickname1"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:textColor="#BEBEBE" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Re_sex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="性别"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Tv_sex1"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:textColor="#BEBEBE" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Re_region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Tv_region"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="地区"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Tv_region1"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:textColor="#BEBEBE" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#BEBEBE" >
    </View>

    <RelativeLayout
        android:id="@+id/Re_mail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="邮箱"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Tv_mail1"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:textColor="#BEBEBE" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#BEBEBE" >
    </View>

</LinearLayout>